Vertex sky_shader.vert
Fragment sky_shader.frag
Program  Sky  TexUnit 6                 \
        scale <0.2, 3.0, 5.>            \

Texture2D  6  nvposx.bmp
QuadYZ 10. 10. 10 10

Texture2D  6  nvnegx.bmp
QuadYZ -10. 10. 10 10

Texture2D  6  nvposy.bmp
QuadXZ 10. 10. 10 10

Texture2D  6  nvposz.bmp
QuadXY 10. 10. 10 10

Texture2D  6  nvnegz.bmp
QuadXY -10. 10. 10 10
